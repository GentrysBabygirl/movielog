---
layout: false
---
!!! XML
%feed{ xmlns: 'http://www.w3.org/2005/Atom' }
  - posts = Movielog::App.posts
  - sorted_keys = Movielog::App.posts.keys.sort.reverse
  %title= site.title
  %link{ href: "#{site.url}feed.xml", rel: 'self' }/
  %link{ href: "#{site.url}" }/
  %updated= Time.now.xmlschema
  %id= site.url
  %author
    %name= site.author

  - sorted_keys.each_with_index do |key, index|
    - break if index > 9
    - post = posts[key]
    %entry
      - if post.kind_of?(Movielog::Review)
        - review = post
        %title
          #{review.sequence}. #{review.display_title} #{grade_to_text(review.grade)}
        %link{ href: "#{site.url}reviews/#{review.slug}" }
        %id= "#{site.url}reviews/#{review.slug}"
      - else
        %title
          #{post.sequence}. #{post.title}
        %link{ href: "#{site.url}features/#{post.slug}" }
        %id= "#{site.url}features/#{post.slug}"
      %updated= post.date.xmlschema
      %content{ type: 'html' }
        = CGI.escapeHTML(markdown(post.content))
